@model LightWay.Models.TransportMember

@{
    ViewBag.Title = "Create";
}



<div class="panel panel-primary">
    <div class="panel-heading">Create Transport Member</div>
    <div class="panel-body">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Transport Member</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="col-md-offset-4 ">
                        Student Number:<strong> @Html.Raw(ViewBag.StudentNumber)</strong>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-4 ">
                        Student Name:<strong> @Html.Raw(ViewBag.StudentName)</strong>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-4 ">
                        Class:<strong> @Html.Raw(ViewBag.Class)</strong>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-4">
                        PhoneNumber: <strong>@Html.Raw(ViewBag.PhoneNumber)</strong>
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.Route, "Route", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownList("Route", ViewBag.Route as SelectList, "Select Route", new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })*@
                    </div>
                </div>

                <div class="form-group ">
                    @Html.LabelFor(model => model.Driver, "Driver", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownList("Driver", ViewBag.Driver as SelectList, "Select Driver", new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })*@
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
