@model IEnumerable<LightWay.Models.Route>

@{
    ViewBag.Title = "Index";
}


<div class="panel panel-primary">
    <div class="panel-heading">Delete Route</div>
    <div class="panel-body">

        @if (User.IsInRole("Accountant") || User.IsInRole("Admin"))
        {
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
        }

        <table class="table table-bordered table-striped table-responsive table-condensed">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RouteName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RouteAddress)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RouteName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RouteAddress)
                    </td>
                    <td>
                        @if (User.IsInRole("Accountant") || User.IsInRole("Admin"))
                        {
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                        }
                        else
                        {
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                        }
                    </td>
                </tr>
            }

        </table>
    </div>
</div>









