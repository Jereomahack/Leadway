
@{

    ViewBag.Tittle = "";
    Layout = null;
}
<link href="~/css/bootstrap.min.css" rel="stylesheet">
<br />
<br />
<br />
<br />
<div class="container">
    <div class="panel panel-primary">
        <div class="panel-body">
            <div class="col-md-12" style="color:red;font-size:20px; text-align:center">
              
                <span style="color:red;font-size:large">@ViewBag.Message</span>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-primary ">
                         <div class="panel-heading">Generate Code for checking Result</div>
                            <div class="panel-body">
                          @using(Html.BeginForm("IndexParent", "Scores", FormMethod.Post, new { @class = "form-horizontal" }))
                          {
                                    <div class="form-horizontal">
                                        <h4>Please select the learner's Admission number</h4>
                                        <hr />
                                        <div class="form-group">
                                            @Html.Label("", " Admission Number(s)", new { @class = "control-label col-md-4" })
                                            <div class="col-md-6">
                                                @Html.DropDownList("StudtNum", ViewBag.StudentNumber as SelectList, "Select Admission Number " ,new { @class = "form-control" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.Label("", "Accademic Year ", new { @class = "control-label col-md-4" })
                                            <div class="col-md-6">
                                                @Html.TextBox("AccademicYear", ViewBag.AccademicYear as string, new { @class = "form-control", @readonly= true })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.Label("", "Term", new { @class = "control-label col-md-4" })
                                            <div class="col-md-6">
                                                @Html.DropDownList("Terms", ViewBag.Terms as SelectList, "Select Term", new { @class = "form-control"})
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.Label("", "phone Number", new { @class = "control-label col-md-4" })
                                            <div class="col-md-6">
                                                @Html.TextBox("phone", ViewBag.Phone as string, new { @class = "form-control", @readonly = true })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-offset-3 col-md-10">
                                                <input type="submit" value="Check Result" class="btn btn-primary" />
                                            </div>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>