@model IEnumerable<LightWay.Models.Fee>

@{
    ViewBag.Title = "Index";
}


<form action="~/Fees/Index">
    <div class="row">
        <div class="col-md-2">
            <a>Transaction No.</a>  @Html.TextBox("Ref", (string)ViewBag.Ref, new { @class = "form-control input-sm" })
        </div>
        <div class="col-md-2">
            <a>Phone</a>  @Html.TextBox("Phone", (string)ViewBag.Phone, new { @class = "form-control input-sm" })
        </div>
        <div class="col-md-2">
            <a>Date From</a>  @Html.TextBox("SearchFrom", (string)ViewBag.Ref, new { @class = "form-control input-sm", @type = "Date" })
        </div>
        <div class="col-md-2">
            <a>Date To</a>  @Html.TextBox("SearchTo", (string)ViewBag.Ref, new { @class = "form-control input-sm", @type = "Date" })
        </div>
        <div class="col-md-2">
            <a>Term</a>  @Html.DropDownList("Term", (SelectList)ViewBag.Term,"Select Term", new { @class = "form-control input-sm" })
        </div>
        <div class="col-md-2">
            <a>Session</a>  @Html.DropDownList("Session", (SelectList)ViewBag.Session,"Select Academic Session", new { @class = "form-control input-sm" })
        </div>
        <div class="col-md-2">
            <a>Statues</a>  @Html.DropDownList("Statues", new SelectListItem[]{
                                           new SelectListItem() {Text = "Approved", Value="Approved"},
                new SelectListItem() {Text = "Pending", Value="Pending"}}, "Select Statues", new { @class = "form-control input-sm" })
        </div>

        <div class="col-md-2">
            <br />
            <input type="submit" value="Search" />
        </div>

    </div>
</form>
<br />
@if (ViewBag.Total != null)
{
    <div style="color:green;text-align:center; font-size:20px">
        Total Amount:  NGN  @ViewBag.Total
    </div>
}
else if (ViewBag.Fail != null)
{
    <div style="color:red;text-align:center; font-size:20px">
        @ViewBag.Fail
    </div>
}
else if (ViewBag.Message != null)
{
    <div style="color:green;text-align:center; font-size:20px">
        @ViewBag.Message
    </div>
}
<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th>
            S/No.
        </th>
        <th>
            Trans. No.
        </th>
        <th>
            Reg No
        </th>
        <th>
            Name
        </th>
        @*<th>
               Type
            </th>
            <th>
                Sub
            </th>*@
        <th>
            Amt(NGN)
        </th>
        <th>
            Term
        </th>
        <th>
            Session
        </th>
        <th>
            Statues
        </th>
        <th>
            Date
        </th>

        <th></th>
    </tr>
    @{
        var sno = 0;

    }

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @{ sno++;}
                @sno
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionRef)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentReg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.PaymentCat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentSubCat)
                </td>*@

            <td>
                @Html.DisplayFor(modelItem => item.amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccTerm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccSession)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentStatues)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentDate)
            </td>

            <td>
                @Html.ActionLink("Verify", "Verify", new { id = item.Id })

            </td>
        </tr>
                    }

</table>
