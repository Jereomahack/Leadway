@model IEnumerable<LightWay.Models.TeacherSubject>

@{
    ViewBag.Title = "Create";
}

<div class="panel panel-primary">
    <div class="panel-heading">ASSIGN SUBJECT TO TEACHER</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>TeacherSubject</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="col-md-10 ">
                        Teacher Number: @Html.Raw(ViewBag.TeacherNum)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 ">
                        Teacher Name: @Html.Raw(ViewBag.TeacherName)
                    </div>
                </div>


                <div class="form-group">
                    @*@Html.LabelFor(model => model.Subject, "Class", htmlAttributes: new { @class = "control-label col-md-5" })*@
                    <div class="col-md-7">
                        @Html.DropDownList("Subject", ViewBag.Subject as SelectList, "Select Subject", new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })*@

                    </div>
                </div>

                <div class="form-group">
                    @*@Html.LabelFor(model => model.Subject, "Class", htmlAttributes: new { @class = "control-label col-md-5" })*@
                    <div class="col-md-7">
                        @Html.DropDownList("Class", ViewBag.Class as SelectList, "Select Class", new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })*@

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Add More" class="btn btn-ifo" />
                    </div>
                </div>

                <table class="table table-hover table-bordered table-responsive">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Subject)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Class)
                        </th>

                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Subject)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Class)
                            </td>

                            <td>
                                @Html.ActionLink("Delete", "Remove", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>

            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }


    </div>
</div>













