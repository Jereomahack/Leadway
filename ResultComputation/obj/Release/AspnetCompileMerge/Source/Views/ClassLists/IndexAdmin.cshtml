@model IEnumerable<LightWay.Models.ClassList>

@{
    ViewBag.Title = "IndexAdmin";
}


<div class="panel panel-primary">
    <div class="panel-heading">Teacher Class</div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>

                @using (Html.BeginForm("IndexAdmin", "ClassLists", FormMethod.Get))
                {

                    <p class="col-md-4 pull-right">
                        Search By Class Name @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
                        <input type="submit" value="Search" class="btn btn-primary" />
                    </p>


                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>
                                Form Master
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ClassName)
                            </th>

                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FormMaster)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ClassName)
                                </td>
                                <td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                                        @Html.ActionLink("Update", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })
                                    }
                                </td>
                            </tr>
                        }

                    </table>
                }
            </div>
        </div>
    </div>
</div>

