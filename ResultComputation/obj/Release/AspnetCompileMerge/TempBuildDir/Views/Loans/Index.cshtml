@model IEnumerable<LightWay.Models.Loan>

@{
    ViewBag.Title = "Index";
}


<div class="panel panel-primary">
    <div class="panel-heading">Loan Index</div>
    <div class="panel-body">
        <table class="table table-bordered table-responsive table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StaffNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StaffName)
                </th>
                <th>
                    Amount Collected
                </th>
                <th>
                    Amount unpaid
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AmountPayable)
                </th>
                <th>
                    Amount Paid
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StaffNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StaffName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AmountCollected)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AmountLeft)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AmountPayable)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AmountPaid)
                    </td>
                    <td>
                        @if (User.IsInRole("Accountant"))
                        {
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                        }
                        else if (User.IsInRole("Principal"))
                        {
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                            @Html.ActionLink("Allow Eidt", "Allow", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                        }
                    </td>
                </tr>
            }

        </table>
    </div>
</div>






                            
