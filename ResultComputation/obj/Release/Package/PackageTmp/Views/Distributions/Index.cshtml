@model IEnumerable<LightWay.Models.Distribution>

@{
    ViewBag.Title = "Index";
}


<div class="panel panel-primary">
    <div class="panel-heading">  Distribution Index </div>
    <div class="panel-body">

        <div style="color:red; font-size:20px" class="pull-right">
            @ViewBag.Quantity
        </div>


        @if (User.IsInRole("Accountant"))
        {
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
        }

        <table class="table table-bordered table-responsive table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Receiver)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Department)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EnteredBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateRecorded)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Receiver)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnteredBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateRecorded)
                    </td>
                    @if (User.IsInRole("Accountant"))
                    {
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                        </td>
                    }

                </tr>
            }

        </table>

    </div>
</div>



