@model IEnumerable<LightWay.Models.Fee>

@{
    ViewBag.Title = "Index";
}


<form action="~/Fees/Index">
    <div class="row">
        <div class="col-md-4">
            <a>Date From</a>  @Html.TextBox("SearchFrom", (string)ViewBag.Ref, new { @class = "form-control input-sm", @type = "Date" })
        </div>
        <div class="col-md-4">
            <a>Date To</a>  @Html.TextBox("SearchTo", (string)ViewBag.Ref, new { @class = "form-control input-sm", @type = "Date" })
        </div>
        <div class="col-md-4">
            <br />
            <input type="submit" value="Search" />
        </div>

    </div>
</form>
<br />
@if (ViewBag.Total != null)
{
    <div style="color:green;text-align:center; font-size:20px">
        Total Amount:  NGN  @ViewBag.Total
    </div>
}
else if (ViewBag.Fail != null)
{
    <div style="color:red;text-align:center; font-size:20px">
        @ViewBag.Fail
    </div>
}
else if (ViewBag.Message != null)
{
    <div style="color:green;text-align:center; font-size:20px">
        @ViewBag.Message
    </div>
}

<p>
    @Html.ActionLink("Click Here to make New Payment", "Create", null, new { @class = "gethist btn btn-danger btn-sm" })
</p>

<table class="table table-striped table-bordered table-responsive table-condensed">
    <tr>
        <th>
            S/No.
        </th>
        <th style="width:100px">
            Date
        </th>
        <th>
            Trans. No.
        </th>
        <th>
            OPR
        </th>
        <th>
            Name
        </th>
        <th>
            Amt(NGN)
        </th>
        <th>
            Pay Ref
        </th>
        <th>
            Term
        </th>
        <th>
            Session
        </th>
        <th>
            Statues
        </th>


        <th></th>
    </tr>
    @{
        var sno = 0;

    }

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @{ sno++;}
                @sno
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionRef)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OPR)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payref)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccTerm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccSession)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentStatues)
            </td>
            <td>
                @if (item.PaymentStatues != "Approved Successful")
                {
                    @Html.ActionLink("Verify|Try Again", "Verify", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                }

            </td>
        </tr>
    }

</table>
<div id="views" style="display:none"></div>
@section scripts{
    <script src="~/Jquerry/jquery-1.10.2.min.js"></script>
    <script src="~/Jquerry/jquerry-ui-min.js"></script>
    <script src="~/Scripts/general.js"></script>
}